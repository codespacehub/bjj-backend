generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id     String @id
  name   String
  cnpj   String @unique
  phone  String
  email  String
  domain String

  active Boolean?

  users       User[]
  modalities  Modality[]
  graduations Graduation[]
  plans       Plan[]

  updated_at DateTime?  @default(now())
  created_at DateTime   @default(now())
  Time       Time[]
  Presence   Presence[]

  @@map("organizations")
}

model Modality {
  id          String @id
  name        String
  description String

  users User[]

  graduations Graduation[]
  times       Time[]

  Organization    Organization? @relation(fields: [organization_id], references: [id])
  organization_id String?

  updated_at DateTime?
  created_at DateTime   @default(now())
  Presence   Presence[]

  @@map("modalities")
}

model Graduation {
  id           String  @id
  name         String
  color_degree String?
  amount_class Int?

  order Int?

  users User[]

  Modality    Modality? @relation(fields: [modality_id], references: [id])
  modality_id String?

  Organization    Organization? @relation(fields: [organization_id], references: [id])
  organization_id String?

  updated_at DateTime?
  created_at DateTime  @default(now())

  @@map("graduations")
}

model User {
  id         String @id
  cpf        String @unique
  name       String
  role       String
  email      String @unique
  phone      String
  password   String
  birth_date String

  uf           String
  cep          String
  city         String
  street       String
  district     String
  house_number String
  amount_class Int

  active   Boolean
  payday   Int
  verified Boolean

  times    Time[]
  Presence Presence[]

  Graduation    Graduation? @relation(fields: [graduation_id], references: [id])
  graduation_id String?

  Organization    Organization? @relation(fields: [organization_id], references: [id])
  organization_id String?

  Modality    Modality? @relation(fields: [modality_id], references: [id])
  modality_id String?

  Plan Plan?   @relation(fields: [plan], references: [id])
  plan String?

  updated_at DateTime?
  created_at DateTime  @default(now())

  @@map("users")
}

model Time {
  id   String @id
  hour String

  Organization    Organization? @relation(fields: [organization_id], references: [id])
  organization_id String?

  Modality    Modality? @relation(fields: [modality_id], references: [id])
  modality_id String?

  User    User?   @relation(fields: [user_id], references: [id])
  user_id String?

  updated_at DateTime?
  created_at DateTime   @default(now())
  Presence   Presence[]

  @@map("times")
}

model Plan {
  id          String @id
  name        String
  description String
  value       Int

  users User[]

  Organization    Organization? @relation(fields: [organization_id], references: [id])
  organization_id String?

  updated_at DateTime?
  created_at DateTime  @default(now())

  @@map("plans")
}

model Presence {
  id  String   @id
  day DateTime

  User    User?   @relation(fields: [user_id], references: [id])
  user_id String?

  Time    Time?   @relation(fields: [time_id], references: [id])
  time_id String?

  Organization    Organization? @relation(fields: [organization_id], references: [id])
  organization_id String?

  Modality    Modality? @relation(fields: [modality_id], references: [id])
  modality_id String?

  updated_at DateTime?
  created_at DateTime  @default(now())

  @@map("presencies")
}
